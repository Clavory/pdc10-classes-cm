<!DOCTYPE html>  
<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx" crossorigin="anonymous">
<title>Add Class</title>
</head>  
<body style="background-color:#5b3256;">
    <div class="container">
        <div class="row">
            <div class="header">
                <h1 style="color:white;"><center>Add Class</center></h1>
            </div>
            <div class="col-3">
                <a type="button" href="../classes/index.php" class="btn btn-dark">Back</a>
            </div> 
        </div>
    </div>
    <div class="table">       
        <form method="POST" action="../classes/add.php">
            <div class="form-group row">
                <label for="class_name" class="col-sm-2 col-form-label" style="color:white;">Name:</label>
                <div class="col-sm-4">
                <input type="text" class="form-control" id="class_name" name="class_name" required>
                </div>
            </div>
            <div class="form-group row">
                <label for="class_desc" class="col-sm-2 col-form-label" style="color:white;">Description:</label>
                <div class="col-sm-4">
                <input type="text" class="form-control" id="class_desc" name="class_desc" required>
                </div>
            </div>
            <div class="form-group row">
                <label for="class_code" class="col-sm-2 col-form-label" style="color:white;">Class Code:</label>
                <div class="col-sm-4">
                <input type="text" class="form-control" id="class_code" name="class_code" required>
                </div>
            </div>
            <div class="form-group">
            <label for="class_code" class="col-sm-2 col-form-label" style="color:white;">Teacher Full Name:</label>
                <select name="employee_number" id="employee_number">
                    <option value="{{employee_number}}"></option>
                    {{# all_teachers}}
                    <option value="{{employee_number}}">{{teacher_first_name}} {{teacher_last_name}}</option>
                    {{/ all_teachers}}
                </select>
            </div>

            <div class="form-group row" >
                <div class="col-sm-4">
                <button id="submit"  type="submit" class="btn btn-info">Submit</button>
                </div>
            </div>
        </form>
    </div>
</body>
</html>